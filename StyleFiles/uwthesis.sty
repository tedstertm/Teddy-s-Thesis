	\thispagestyle{empty}%
	\newpage\strut\phantom{Copyrightpage}
	\vspace{6.5in}
	\begin{center}
		\copyright\ Copyright by \@author\ \@copyrightyear\\
		All Rights Reserved
	\end{center}
	\vfill\newpage}

